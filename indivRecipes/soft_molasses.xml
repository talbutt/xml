<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE recipeml PUBLIC "-//FormatData//DTD RecipeML 0.5//EN" "http://www.formatdata.com/recipeml/recipeml.dtd">
<?xml-stylesheet href="recipe.xml" type="text/xsl"?>
<recipeml xmlns="http://www.formatdata.com/recipeml/recipeml.dtd" xmlns:x="http://www.w3.org/1999/xhtml" version="0.5">
  <recipe id="soft_molasses">
    <head>
      <meta content="1998-12-1" name="DC.Date"/>
      <meta content="Leta Harris" name="DC.Creator"/>
      <title>Soft molasses cookies</title>
      <source>Leta Harris</source>
      <categories>
        <cat class="main">Cookies</cat>
        <cat class="sub">Drop</cat>
        <cat class="region">America</cat>
				<cat class="diet">Nut-free</cat>
      </categories>
    </head>
    <description>.</description>
    <ingredients system="US">
      <ing-div>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>cup</unit>
          </amt>
          <item>flour</item>
          <!--2 cups flour-->
        </ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cup</unit>
          </amt>
          <item>sugar</item>
          <!--1/2 cup sugar-->
        </ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cup</unit>
          </amt>
          <item>shortening</item>
          <!--1/2 cup shortening-->
        </ing>
        <ing>
          <amt>
            <qty>1/2</qty>
            <unit>cup</unit>
          </amt>
          <item>light molasses</item>
          <!--1/2 cup light molasses-->
        </ing>
        <ing>
          <amt>
            <qty>1</qty>
          </amt>
          <item>egg</item>
          <!--1 egg-->
        </ing>
        <ing>
          <amt>
            <qty>2</qty>
            <unit>teaspoons</unit>
          </amt>
          <item>baking soda</item>
          <!--2 teaspoons baking soda-->
        </ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit>
          </amt>
          <item>cinnamon</item>
          <!--1 teaspoon cinnamon-->
        </ing>
        <ing>
          <amt>
            <qty>1</qty>
            <unit>teaspoon</unit>
          </amt>
          <item>ground ginger</item>
          <!--1 teaspoon ground ginger-->
        </ing>
        <ing>
          <amt>
            <qty>1/4</qty>
            <unit>teaspoon</unit>
          </amt>
          <item>salt</item>
          <!--1/4 teaspoon salt-->
        </ing>
        <ing>
          <amt>
            <qty>1/3</qty>
            <unit>cup</unit>
          </amt>
          <item>cold water</item>
          <!--1/3 cup cold water-->
        </ing>
      </ing-div>
    </ingredients>
    <directions>
      <step>Preheat oven to <temp><qty>400</qty><tempunit unit="F" system="US">degrees</tempunit><!--400  degrees--></temp>. Grease cookie sheet. In large bowl, with mixer at medium speed, beat all ingredients until well mixed. Drop by rounded tablespoonfuls, at least 2 inches apart, onto cookie sheets. If desired, place 4 or 5 raisins on top of each cookie. Bake 8-10 minutes, or until top springs back when lightly pressed with finger.</step>
    </directions>
  </recipe>
</recipeml>
